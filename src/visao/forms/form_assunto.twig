{# empty Twig template #}
{% extends "templates/base.twig"%}

{% block body %}
    <br/>
    <div class="html ui top attached segment">
        <br>
        {% include 'fragmentos/frag_titulo.twig' 
            with {
                'titulo' : 'Gerenciamento de assuntos', 
                'sub_titulo' : 'Cadastro de assuntos no sistema'
            }
        %}
        {% if ctrl.mensagem %}
            {% include 'fragmentos/frag_mensagem.twig'
                with {
                    'cabecalho' : ctrl.mensagem.cabecalho,
                    'tipo_msg' : ctrl.mensagem.tipo,
                    'descricao' : ctrl.mensagem.descricao
                }
            %}
        {% else %}
            {{'erroooooooo'}}
        {% endif %}
        <div class="ui top attached tabular menu">
            <div class="item active" data-tab="first">Formulário</div>
            <div class="item" data-tab="second">Tabela de Assuntos</div>
        </div>
        <div class="ui bottom attached active tab segment" data-tab="first">
            <form id="form_assunto" class="ui form" method="post" 
                  action="front_controller.php">                
                <input type="hidden" name="campo_id" value="{{ctrl.assunto.id}}"/>              
                <div class="field">
                    <label>Descrição:</label>
                    <input type="text" name="campo_descricao" placeholder="descricao" value="{{ctrl.assunto.descricao}}">
                </div>
                <div class="fields">
                    <div class="field">
                        <div class="ui submit black button"
                             onClick="submeterForm('form_assunto', 'funcao_gerenciar_assunto', 'cadastrar');"><i class="save icon"></i>Cadastrar</div>
                    </div>
                    <div class="field">
                        <div class="ui submit black button"
                             onClick="submeterForm('form_assunto', 'funcao_gerenciar_assunto', 'pesquisar');"><i class="search icon"></i>Pesquisar</div>
                    </div>
                </div>
            </form>
        </div>
        <div class="ui bottom attached tab segment" data-tab="second">
            
            <table class="ui basic table">
                <thead>
                    <tr><th>Descrição</th></tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Licença Particular</td>
                    </tr>
                    <tr>
                        <td>Férias</td>
                    </tr>
                    <tr>
                        <td>Progressão Horizontal</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
