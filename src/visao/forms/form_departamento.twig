{# empty Twig template #}
{% extends "templates/base.twig"%}

{% block body %}
    <br/>
    <div class="html ui top attached segment">
        <br>
        {% include 'fragmentos/frag_titulo.twig' 
            with {
                'titulo' : 'Gerenciamento de departamentos', 
                'sub_titulo' : 'Cadastro de departamentos no sistema'
            }
        %} 
        <div class="ui top attached tabular menu">
            <div class="item active" data-tab="first">Formulário</div>
            <div class="item" data-tab="second">Tabela de Departamentos</div>
        </div>
        <div class="ui bottom attached active tab segment" data-tab="first">
            <form class="ui form" method="post" action="departamento">
                <div class="field">
                    <label>Descrição:</label>
                    <input type="text" name="campo_descricao" placeholder="descricao">
                </div>
                <div class="fields">
                    <div class="field">
                        <div class="ui submit black button"><i class="save icon"></i>Cadastrar</div>
                    </div>
                    <div class="field">
                        <div class="ui submit black button"><i class="search icon"></i>Pesquisar</div>
                    </div>
                </div>
            </form>
        </div>
        <div class="ui bottom attached tab segment" data-tab="second">
            
            <table class="ui basic table">
                <thead>
                    <tr><th>Descrição</th></tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Recursos Humanos</td>
                    </tr>
                    <tr>
                        <td>Secretaria de Administração</td>
                    </tr>
                    <tr>
                        <td>Procuradoria</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
