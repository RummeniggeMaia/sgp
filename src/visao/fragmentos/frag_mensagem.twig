{# empty Twig template #}
<div class="ui modal" id="modal_mensagem">
    <i class="close icon"></i>
    <div class="header">
        {{cabecalho}}
    </div>
    <div class="content">
        <div class="image">
            {% if tipo_msg == 'msg_tipo_ok' %}
                <i class="ok sign icon"></i>
            {% elseif tipo_msg == 'msg_tipo_info' %}
                <i class="info icon"></i>
            {% elseif tipo_msg == 'msg_tipo_aviso' %}
                <i class="warning icon"></i>
            {% elseif tipo_msg == 'msg_tipo_erro' %}
                <i class="remove sign icon"></i>
            {% endif %}
        </div>
        <div class="description">
            {{descricao}}
        </div>
    </div>
    <div class="actions">
        <div class="ui black button">
            <i class="thumbs up outline icon"></i>
            ok
        </div>
    </div>
</div>
