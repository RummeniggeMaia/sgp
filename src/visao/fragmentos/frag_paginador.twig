{# empty Twig template #}
<script type="text/javascript">
    $(document).ready(function() {
        $("#drop_limit_{{ id }}").dropdown({
            onChange: function(val) {
                submeterForm('{{ formulario}}', '{{ funcao }}', 'paginador_limit_' + val);
            }});
        $("#paginaAtual_{{ id }}").keypress(function(e) {
            if (e.which == 13) {
                var aux = $("#paginaAtual").val();
                submeterForm('{{formulario}}', '{{funcao}}', 'paginador_pular_' + aux);
            }
        });
    });
</script>

<span class="ui icon button negative {{ paginador.podeVoltar() ? '' : 'disabled'}}"
      onclick="submeterForm('{{ formulario}}', '{{ funcao }}', 'paginador_primeira');">
    <i class="step backward icon"></i>
</span>
<span class="ui icon button negative {{ paginador.podeVoltar() ? '' : 'disabled'}}"
      onclick="submeterForm('{{ formulario}}', '{{ funcao }}', 'paginador_anterior');">
    <i class="backward icon"></i>
</span>
<label style="padding-left: 15px">PÃ¡gina</label>
<span class="ui input" style="width: 75px">
    <input id="paginaAtual_{{ id }}" type="text" style="text-align: center" value="{{ paginador.paginaAtual() }}"/>
</span>
<label style="padding-right: 15px">de {{ paginador.totalDePaginas() }}</label>
<span class="ui icon button negative {{ paginador.podeSeguir() ? '' : 'disabled'}}"
      onclick="submeterForm('{{ formulario}}', '{{ funcao }}', 'paginador_proxima');">
    <i class="forward icon"></i>
</span>
<span class="ui icon button negative {{ paginador.podeSeguir() ? '' : 'disabled'}}"
      onclick="submeterForm('{{ formulario}}', '{{ funcao }}', 'paginador_ultima');">
    <i class="step forward icon"></i>
</span>
<span style="padding-left: 15px">
    Limite:
    <span class="ui inline dropdown" id="drop_limit_{{ id }}">
        <div class="text">
            {{ paginador.limit }}
        </div>
        <i class="dropdown icon"></i>
        <div class="menu">
            {% for i in paginador.limites %}
                <div class="item" data-value="{{ i }}">{{ i }}</div>
            {% endfor %}
        </div>
    </span>
</span>
