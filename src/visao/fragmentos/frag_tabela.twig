{# empty Twig template #}
<table border="1" width="100%">
    <thead>
        <tr>
            {% if modelo.modoBusca %}
                <td>ok</td>
            {% endif %}
            {% for cabecalho in modelo.cabecalhos %}
                <td><b><center>{{ cabecalho}}</center></b></td>
            {% endfor %}
            {% if not modelo.modoBusca %}
                <td align="center"><b>Editar</b></td>
                <td align="center"><b>Excluir</b></td>
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% for linha in modelo.linhas %} 
            <tr>
                {% if modelo.modoBusca %}
                    <td>
                        <input type="checkbox"/>
                    </td>
                {% endif %}
                {% for valor in linha.valores %}
                    <td>{{ valor }}</td>
                {% endfor %}
                {% if not modelo.modoBusca %}
                    <td align="center">
                        <input type="button" value="Editar"/>
                    </td>
                    <td align="center">
                        <input type="button" value="Excluir"/>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
    </tbody>
</table>