<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Home{% endblock %}</title>
        <link href="web/recursos/libs/semantic_ui/semantic.min.css" rel="stylesheet" type="text/css"/>
        <script src="web/recursos/libs/semantic_ui/semantic.min.js"></script>
        <script src="web/recursos/libs/jquery.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function() {
                $('a').click(function(event) {
                    var form = $('<form method="post" action="src/controle/front_controller.php"></form>');
                    var campo = document.createElement('input');
                    campo.type = "hidden";
                    campo.name = $(this).attr('name');
                    campo.value = "teste";
                    form.append(campo);
                    form.submit();
                });
            });
        </script>
    </head>
    <body class="pushable">
        <div class="ui fixed main menu">
            <div class="container">
                <div class="ui menu inverted" style="padding-left: 260px">
                    <a class="item">
                        <i class="home icon"></i> Home
                    </a>
                    <a class="item">
                        <i class="info circle icon"></i> Sobre
                    </a>
                </div>
            </div>
        </div>
        <div class="ui vertical sidebar inverted menu left visible">
            <div class="item">
                <img src="web/recursos/imagens/icon-process-white.png" width="100px" />
            </div>
            <a class="item" name="link1"><i class="user icon"></i>Funcionários</a>
            <a class="item" name="link2"><i class="archive icon"></i>Assuntos</a>
            <a class="item" name="link3"><i class="building icon"></i>Departamentos</a>
            <a class="item" name="link4"><i class="exchange icon"></i>Movimentações</a>
            <a class="item" name="link5"><i class="flag icon"></i>Processos</a>
        </div>
        <div class="pusher">
            {% block body %}

            {% endblock %}
        </div>
    </body>
</html>
